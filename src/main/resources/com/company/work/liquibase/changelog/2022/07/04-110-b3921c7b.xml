<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="Work">
        <createTable tableName="MORKOVKA">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_MORKOVKA"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="STUDENT_RATING_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Work">
        <createIndex indexName="IDX_MORKOVKA" tableName="MORKOVKA">
            <column name="STUDENT_RATING_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="STUDENT_RATING_ID" baseTableName="MORKOVKA"
                                 constraintName="FK_MORKOVKA_ON_STUDENT_RATING" referencedColumnNames="ID"
                                 referencedTableName="STUDENT_RATING"/>
    </changeSet>
</databaseChangeLog>