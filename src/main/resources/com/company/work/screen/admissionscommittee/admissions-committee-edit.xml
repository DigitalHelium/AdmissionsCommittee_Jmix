<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://admissionsCommitteeEdit.caption"
        focusComponent="form">
    <data>
        <instance id="admissionsCommitteeDc"
                  class="com.company.work.entity.AdmissionsCommittee">
            <fetchPlan extends="_base">
                <property name="students" fetchPlan="_base">
                    <property name="contacts" fetchPlan="_base">
                        <property name="registrationAddress" fetchPlan="_base"/>
                        <property name="residentialAddress" fetchPlan="_base"/>
                    </property>
                    <property name="documents" fetchPlan="_base"/>
                    <property name="desiredCourses" fetchPlan="_base"/>
                    <property name="examResults" fetchPlan="_base"/>
                </property>
                <property name="courses" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="scrollBox">
        <scrollBox id="scrollBox" spacing="true">
            <form id="form" dataContainer="admissionsCommitteeDc">
                <column width="350px">
                    <textField id="yearField" property="year"/>
                    <entityPicker id="studentsField" property="students">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                    <entityPicker id="coursesField" property="courses">
                        <actions>
                            <action id="entityLookup" type="entity_lookup"/>
                            <action id="entityClear" type="entity_clear"/>
                        </actions>
                    </entityPicker>
                </column>
            </form>
        </scrollBox>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
